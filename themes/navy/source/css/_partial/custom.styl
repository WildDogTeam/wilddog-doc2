.article-content table
	width: 100%
	border: 1px solid #d9d9d9
	border-bottom: 0
	border-collapse: collapse
	th
		padding-top: 11px
		padding-bottom: 11px
		padding-left: 20px
		border-right: 1px solid #ededed
		&:last-child
			border: 0
	tr
		border-bottom: 1px solid #d9d9d9
	td
		padding-top:10px
		padding-bottom: 10px
		padding-left: 20px
		border-right: 1px solid #f5f5f5
		&:last-child
			border: 0

.highlight table
	border: 0
	th,
	tr,
	td
		border:0

.slide
	margin-top: 14px
	margin-bottom: 14px
	border: 1px solid #ebebeb
	background-color: #f7f7f7
	letter-spacing: 0
	.slide-title
		background-color: #fff
		border-bottom: 1px solid #ebebeb
		letter-spacing: 0
		overflow: hidden
	.slide-tab
		float: left
		padding-left: 24px
		padding-right: 24px
		height: 48px
		line-height: 48px
		cursor: pointer
		border-bottom: 2px solid #fff
		transition: 0.2s
		&.tab-current
			color: #039be5
			border-color: #039be5
	.highlight
		margin-top: 0
		margin-bottom: 0
		padding-left: 0
		padding-right: 0
	.slide-content
		display: none
		&.slide-content-show
			display: block

.slide br 
	display: none

.env
	padding-bottom: 30px
	width: 100%
	background-color: #fff
	border: 1px solid #e5e5e5
	border-radius: 3px
	ul
		padding-left: 20px
	li
		padding-top: 10px
	br
		display: none
	.env-title
		margin: 0 0 17px
		padding-left: 20px
		height: 40px
		line-height: 40px
		background-color: #f5f5f5
		font-weight: 700
		color: #333
		font-size: 16px
		border-bottom: 1px solid #e5e5e5